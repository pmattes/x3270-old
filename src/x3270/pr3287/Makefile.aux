# Auxiliary makefile for pr3287

TARDIR=pr3287-3.3
RM=rm -f

all:
	@echo "Must pick a specific make target."

# Development tools.

SOURCES = charset.c ctlr.c pr3287.c proxy.c resolver.c see.c sf.c tables.c \
	telnet.c trace_ds.c utf8.c unicode.c unicode_dbcs.c
HEADERS = 3270ds.h ctlrc.h globals.h localdefs.h popupsc.h proxyc.h \
	resolverc.h seec.h sfc.h tablesc.h telnetc.h tn3270e.h trace_dsc.h \
	w3miscc.h arpa_telnet.h charsetc.h unicodec.h unicode_dbcsc.h \
	utf8c.h
MISC = Makefile.in mkversion.sh pr3287.man README \
	version.txt configure install-sh config.sub \
	config.guess configure.in LICENSE
DEVKIT = pr3287.man.m4 m42man instlist.base instlist.man
HTML = html/pr3287-man.html html/Build.html html/ReleaseNotes.html

FILES = $(SOURCES) $(HEADERS) $(MISC) $(HTML) 

tarlist: Makefile.aux
	$(RM) tarlist
	for i in $(FILES); \
	do echo $(TARDIR)/$$i; \
	done >$@

pr3287.tar: $(FILES) tarlist
	$(RM) $(TARDIR)
	ln -s . $(TARDIR)
	$(RM) $@
	#tar -cof $@ -I tarlist
	tar -ch -T tarlist -f $@
	$(RM) $(TARDIR)

pr3287.tgz: pr3287.tar
	gzip <pr3287.tar >$@

man: pr3287.man html/pr3287-man.html
pr3287.man: pr3287.man.m4 man.m4 version.txt
	./m42man pr3287 pr3287.man.m4 >$@
html/pr3287-man.html: pr3287.man.m4 html.m4 version.txt
	./m42html pr3287 pr3287.man.m4 >$@
html/ReleaseNotes.html: html/documentation-relnotes-body.html mkstand.bash
	./mkstand.bash "pr3287 Release Notes" html/documentation-relnotes-body.html $@

configure: configure.in
	autoconf

ID: $(SOURCES) $(HEADERS)
	mkid $(SOURCES) $(HEADERS)

tags: $(SOURCES) $(HEADERS)
	ctags $(SOURCES) $(HEADERS)

lessman:
	tbl pr3287.man | nroff -man | less
