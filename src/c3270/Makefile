# Makefile for c3270 (console-based 3270 emulator)

# Uncomment these lines to get readline support.
#EXTRA_CFLAGS = -DUSE_READLINE
#EXTRA_LIBS = -lreadline

RM = rm -f

all: c3270

SRCS = actions.c ansi.c apl.c charset.c ctlr.c ft.c ft_cut.c ft_dft.c glue.c \
	help.c host.c keymap.c kybd.c macros.c print.c resources.c screen.c \
	sf.c tables.c c3270.c telnet.c toggles.c trace_ds.c util.c xio.c \
	XtGlue.c
VOBJS = actions.o ansi.o apl.o charset.o ctlr.o ft.o ft_cut.o ft_dft.o glue.o \
	help.o host.o keymap.o kybd.o macros.o print.o resources.o screen.o \
	sf.o tables.o c3270.o telnet.o toggles.o trace_ds.o util.o xio.o \
	XtGlue.o
OBJS1 = $(VOBJS) version.o

INSTALLDIR = /usr/local
LIBX3270DIR = $(INSTALLDIR)/lib/x3270

INCS = -I.
DEFINES = -DLIBX3270DIR=\"$(LIBX3270DIR)\"
#CDEBUGFLAGS = -g -Wall

CFLAGS = $(INCS) $(DEFINES) $(CDEBUGFLAGS) $(EXTRA_CFLAGS)

version.o: $(VOBJS) version.txt mkversion.sh
	@chmod +x mkversion.sh version.txt
	sh ./mkversion.sh $(CC) c3270

c3270: $(OBJS1)
	$(CC) -o $@ $(OBJS1) -lncurses -lutil $(EXTRA_LIBS)

install: c3270
	install c3270 $(INSTALLDIR)/bin/c3270

install.man:
	install c3270.man $(INSTALLDIR)/man/man1/c3270.1
	install x3270if.man $(INSTALLDIR)/man/man1/x3270if.1
	install x3270-script.man $(INSTALLDIR)/man/man1/x3270-script.1
	install ibm_hosts.man $(INSTALLDIR)/man/man1/ibm_hosts.1

clean:
	$(RM) c3270 *.o

depend:
	gccmakedep $(INCS) $(DEFINES) -s "# DO NOT DELETE" $(SRCS)

# -------------------------------------------------------------------------
# dependencies generated by makedepend

# DO NOT DELETE
