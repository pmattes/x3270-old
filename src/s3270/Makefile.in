# Makefile for s3270 (scripted 3270 emulator)

RM = rm -f
CC = @CC@

all: s3270 x3270if

SRCS = actions.c ansi.c apl.c charset.c ctlr.c ft.c ft_cut.c ft_dft.c glue.c \
	host.c kybd.c macros.c print.c resources.c sf.c smain.c tables.c \
	telnet.c toggles.c trace_ds.c util.c xio.c XtGlue.c
VOBJS = actions.o ansi.o apl.o charset.o ctlr.o ft.o ft_cut.o ft_dft.o glue.o \
	host.o kybd.o macros.o print.o resources.o sf.o smain.o tables.o \
	telnet.o toggles.o trace_ds.o util.o xio.o XtGlue.o
OBJS1 = $(VOBJS) version.o

LIBDIR = @libdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
LIBX3270DIR = $(LIBDIR)/x3270
MANDIR = @mandir@
BINDIR = @bindir@

#CDEBUGFLAGS = -g -Wall

XCPPFLAGS = -I. -DLIBX3270DIR=\"$(LIBX3270DIR)\" @CPPFLAGS@
CFLAGS = @CFLAGS@ $(XCPPFLAGS) $(CDEBUGFLAGS)
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

version.o: $(VOBJS) version.txt mkversion.sh
	@chmod +x mkversion.sh version.txt
	sh ./mkversion.sh $(CC) s3270

s3270: $(OBJS1)
	$(CC) -o $@ $(OBJS1) $(LDFLAGS) $(LIBS)
x3270if: x3270if.o
	$(CC) -o $@ x3270if.o

install: s3270 x3270if
	install s3270 $(BINDIR)/s3270
	install x3270if $(BINDIR)/x3270if

install.man:
	install s3270.man $(MANDIR)/man1/s3270.1
	install x3270if.man $(MANDIR)/man1/x3270if.1
	install x3270-script.man $(MANDIR)/man1/x3270-script.1

clean:
	$(RM) s3270 *.o

depend:
	gccmakedep $(XCPPFLAGS) -s "# DO NOT DELETE" $(SRCS)

