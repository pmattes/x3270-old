# Makefile for s3270 (script-only x3270)

all: s3270 x3270if

SRCS = actions.c ansi.c apl.c charset.c ctlr.c host.c kybd.c \
       macros.c print.c sf.c smain.c tables.c telnet.c toggles.c \
       trace_ds.c util.c xio.c XrmGlue.c XtGlue.c
VOBJS = actions.o ansi.o apl.o charset.o ctlr.o host.o kybd.o \
      macros.o print.o sf.o smain.o tables.o telnet.o toggles.o \
      trace_ds.o util.o xio.o XrmGlue.o XtGlue.o
OBJS1 = $(VOBJS) version.o

FONTINSTDIR = $(FONTDIR)/misc

INSTALLDIR = /usr/local
LIBX3270DIR = $(INSTALLDIR)/lib/x3270
HOSTSFILE = ibm_hosts

INCS = -I.
DEFINES = -DLIBX3270DIR=\"$(LIBX3270DIR)\"

CFLAGS = $(INCS) $(DEFINES) $(CDEBUGFLAGS)

version.o: $(VOBJS) version.txt mkversion.sh
	@chmod +x mkversion.sh version.txt
	sh ./mkversion.sh $(CC) s3270

s3270: $(OBJS1)
	$(CC) -o $@ $(OBJS1)

x3270if: x3270if.o
	$(CC) -o $@ x3270if.o

install: s3270 x3270if
	install s3270 $(INSTALLDIR)/bin/s3270
	install x3270if $(INSTALLDIR)/bin/x3270if

install.man:
	install s3270.man $(INSTALLDIR)/man/man1/s3270.1
	install x3270if.man $(INSTALLDIR)/man/man1/x3270if.1
	install x3270-script.man $(INSTALLDIR)/man/man1/x3270-script.1

clean:
	$(RM) s3270 x3270if *.o

depend:
	gccmakedep $(INCS) $(DEFINES) -s "# DO NOT DELETE" $(SRCS)

# -------------------------------------------------------------------------
# dependencies generated by makedepend

# DO NOT DELETE
