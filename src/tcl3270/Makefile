# Makefile for tcl3270 (tcl-based script-only x3270)

all: tcl3270

# tcl definitions.  Change these to suit your local setup.
TCL_INCDIR = /usr/local/include/tcl8.2
TCL_LIBDIR = /usr/local/lib
TCL_LIB = tcl82

SRCS = actions.c ansi.c apl.c charset.c ctlr.c ft.c ft_cut.c ft_dft.c glue.c \
	host.c kybd.c print.c resources.c sf.c tables.c tcl3270.c telnet.c \
	toggles.c trace_ds.c util.c xio.c XtGlue.c
VOBJS = actions.o ansi.o apl.o charset.o ctlr.o ft.o ft_cut.o ft_dft.o glue.o \
	host.o kybd.o print.o resources.o sf.o tables.o tcl3270.o telnet.o \
	toggles.o trace_ds.o util.o xio.o XtGlue.o
OBJS1 = $(VOBJS) version.o

INSTALLDIR = /usr/local
LIBX3270DIR = $(INSTALLDIR)/lib/x3270

INCS = -I. -I$(TCL_INCDIR)
DEFINES = -DLIBX3270DIR=\"$(LIBX3270DIR)\" -DTCL3270
#CDEBUGFLAGS = -g -Wall

CFLAGS = $(INCS) $(DEFINES) $(CDEBUGFLAGS)

version.o: $(VOBJS) version.txt mkversion.sh
	@chmod +x mkversion.sh version.txt
	sh ./mkversion.sh $(CC) tcl3270

tcl3270: $(OBJS1)
	$(CC) -o $@ $(OBJS1) -L$(TCL_LIBDIR) -l$(TCL_LIB) -lm

install: tcl3270
	install tcl3270 $(INSTALLDIR)/bin/tcl3270

install.man:
	install tcl3270.man $(INSTALLDIR)/man/man1/tcl3270.1

clean:
	$(RM) tcl3270 *.o

depend:
	gccmakedep $(INCS) $(DEFINES) -s "# DO NOT DELETE" $(SRCS)

# -------------------------------------------------------------------------
# dependencies generated by makedepend

# DO NOT DELETE
