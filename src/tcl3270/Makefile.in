# Makefile for tcl3270 (tcl-based scripted 3270 emulator)

RM = rm -f
CC = @CC@

all: tcl3270

SRCS = actions.c ansi.c apl.c charset.c ctlr.c ft.c ft_cut.c ft_dft.c glue.c \
	host.c kybd.c print.c resources.c sf.c tables.c tcl3270.c telnet.c \
	toggles.c trace_ds.c util.c xio.c XtGlue.c
VOBJS = actions.o ansi.o apl.o charset.o ctlr.o ft.o ft_cut.o ft_dft.o glue.o \
	host.o kybd.o print.o resources.o sf.o tables.o tcl3270.o telnet.o \
	toggles.o trace_ds.o util.o xio.o XtGlue.o
OBJS1 = $(VOBJS) version.o

LIBDIR = @libdir@
prefix = @prefix@
exec_prefix = @exec_prefix@
LIBX3270DIR = $(LIBDIR)/x3270
MANDIR = @mandir@
BINDIR = @bindir@

#CDEBUGFLAGS = -g -Wall

XCPPFLAGS = -I. -DLIBX3270DIR=\"$(LIBX3270DIR)\" @CPPFLAGS@
CFLAGS = @CFLAGS@ $(XCPPFLAGS) $(CDEBUGFLAGS)
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@ -lm

version.o: $(VOBJS) version.txt mkversion.sh
	@chmod +x mkversion.sh version.txt
	sh ./mkversion.sh $(CC) tcl3270

tcl3270: $(OBJS1)
	$(CC) -o $@ $(OBJS1) $(LDFLAGS) $(LIBS)

install: tcl3270 x3270if
	install tcl3270 $(BINDIR)/tcl3270

install.man:
	install tcl3270.man $(MANDIR)/man1/tcl3270.1

clean:
	$(RM) tcl3270 *.o

depend:
	gccmakedep $(XCPPFLAGS) -s "# DO NOT DELETE" $(SRCS)

